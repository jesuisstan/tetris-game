# Unified environment variables for the entire project
# Both frontend and backend read this file directly from the project root
# No need to copy to subdirectories - they are configured to read from here

# ============================================
# Frontend Configuration
# ============================================
# For local development you can use either REACT_APP_BACKEND_URL or REACT_APP_HOST + REACT_APP_BACKEND_PORT
# For production (e.g., Render.com) use REACT_APP_BACKEND_URL with full URL
REACT_APP_BACKEND_URL=http://localhost:4444
# Example for Render.com: REACT_APP_BACKEND_URL=https://your-backend-name.onrender.com

# Alternative way for local development (if REACT_APP_BACKEND_URL is not set)
REACT_APP_HOST=localhost
#REACT_APP_HOST=192.168.1.1

REACT_APP_BACKEND_PORT=4444

# Test credentials (optional, for development)
REACT_APP_TEST_EMAIL=test@test.com
REACT_APP_TEST_PASSWORD=

# ============================================
# Backend Configuration
# ============================================
# For local development you can use either FRONTEND_URL or REACT_APP_HOST + REACT_APP_FRONTEND_PORT
# For production (e.g., Render.com) use FRONTEND_URL with full URL
FRONTEND_URL=http://localhost:4040
# Example for Render.com: FRONTEND_URL=https://your-frontend-name.onrender.com

REACT_APP_FRONTEND_PORT=4040

# Database connection
MONGO=

# JWT secret key
JWT=hw

# ============================================
# Game Configuration (used by backend)
# ============================================
REACT_APP_MAX_PLAYERS_IN_ROOM=3
REACT_APP_TETROMINOES_AMOUNT=42
